{
  "name": "clean-architecture-base",
  "version": "0.0.1",
  "description": "Typescript + Clean architecture used as scaffolding",
  "main": "app.ts",
  "scripts": {
    "compile:ts": "rm -rf build/ && tsc -p .",
    "test": "jest --detectOpenHandles",
    "coverage": "jest --coverage --silent",
    "start:script": "npm run compile:ts && node build/frameworks/script/index.js",
    "start:api": "npm run compile:ts && node build/frameworks/api/index.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "husky:precommit": "npm run lint && npm run test"
  },
  "keywords": [
    "Typescript",
    "Clean Architecture",
    "Node"
  ],
  "author": "Danniel Hugo <dannielhugo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/express": "^4.17.1",
    "@types/glob": "^7.1.1",
    "@types/jest": "^23.3.14",
    "@types/joi": "^14.0.0",
    "@types/lodash": "^4.14.118",
    "@types/lokijs": "^1.5.2",
    "@types/node": "^10.14.13",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.2.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "awilix": "^4.2.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.3",
    "joi": "^14.3.0",
    "lokijs": "^1.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky:precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
